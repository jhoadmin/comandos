sudo docker run -d \
> --network mynetwork --network-alias mysql \
> -v mysql-data:/var/lib/mysql \
> -e MYSQL_ROOT_PASSWORD=secret \
> -e MYSQL_DATABASE=mybase \
> mysql:8.0.27

